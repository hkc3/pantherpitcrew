<div class="container" style="padding-bottom: 100px; padding-top: 25px;">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
				<div class="post-img">
					<img src="http://res.cloudinary.com/panther-pit-crew/image/upload/c_fit,f_auto,h_300,w_300/v{{data.post.image.version}}/{{data.post.image.public_id}}.jpg" class="media-object">

			  </div>
				<header>
					<h1>{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{{data.post.content.extended}}}
				</div>
			</article>
		</div>
	</div>
</div>
